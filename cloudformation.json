{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Parameters": {
        "setBucketPublic": {
            "Type": "String",
            "Default": "False",
            "AllowedValues": [
                "False",
                "True"
            ]
        }
    },
    "Conditions": {
        "setS3ToPublic": {
            "Fn::Equals": [
                {
                    "Ref": "setBucketPublic"
                },
                "True"
            ]
        }
    },
    "Resources": {
        "lambdaFitIamPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "s3:Get*",
                                "s3:List*",
                                "s3:Put*"
                            ],
                            "Resource": "*"
                        }
                    ]
                },
                "PolicyName": "s3readandwrite",
                "Roles": [
                    {
                        "Ref": "lambdaFitRole"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "761b82ed-c837-44aa-8ab2-c2669ffe6d08"
                }
            }
        },
        "s3BucketFitOrigin": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "NotificationConfiguration": {
                    "LambdaConfigurations": [
                        {
                            "Event": "s3:ObjectCreated:Put",
                            "Function": {
                                "Fn::GetAtt": [
                                    "lambdaFunctionFit",
                                    "Arn"
                                ]
                            },
                            "Filter": {
                                "S3Key": {
                                    "Rules": [
                                        {
                                            "Name": "suffix",
                                            "Value": ".fit"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f9623d01-475c-4a40-8c7b-753544cb3dd1"
                }
            }
        },
        "s3BucketFitDest": {
            "Type": "AWS::S3::Bucket",
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "fbb1dbe5-bc4d-4b46-a72d-6bd541f02209"
                }
            }
        },
        "s3BucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Condition": "setS3ToPublic",
            "Properties": {
                "Bucket": {
                    "Ref": "s3BucketFitDest"
                },
                "PolicyDocument": {
                    "Id": "Policy1611725926861",
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Stmt1611725924025",
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        {
                                            "Fn::GetAtt": [
                                                "s3BucketFitDest",
                                                "Arn"
                                            ]
                                        },
                                        "/*"
                                    ]
                                ]
                            },
                            "Principal": "*"
                        }
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "5424b9b8-a7bf-4763-b444-eecd3e2fee6a"
                }
            },
            "DependsOn": [
                "s3BucketFitDest"
            ]
        },
        "lambdaFunctionFit": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": "fitcfproject",
                    "S3Key": "lambda_function.zip"
                },
                "Layers":[{
                            "Ref": "lambdaFitLayer"
                        }],
                "Handler": "lambda_function.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "lambdaFitRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.8",
                "MemorySize": 512,
                "Timeout": 120,
                "Environment": {
                    "Variables": {
                        "Dest_Bucket": {
                            "Ref": "s3BucketFitDest"
                        }
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "1e766601-d7b0-4462-8d10-1b71a99c4548"
                }
            }
        },
        "LambdaInvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "lambdaFunctionFit",
                        "Arn"
                    ]
                },
                "Principal": "s3.amazonaws.com"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "5c3fb698-69b6-4765-8d8c-e42024b0e66a"
                }
            }
        },
        "lambdaFitLayer": {
            "Type": "AWS::Lambda::LayerVersion",
            "Properties": {
                  "CompatibleRuntimes":["python3.8"],
                "Content": {
                    "S3Bucket": "fitcfproject",
                    "S3Key": "python.zip"
                }            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "288b79e8-e8bc-4eb5-96a8-f7f388933c3d"
                }
            }
        },
        "lambdaFitRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "683570a6-92ee-418d-a307-26601e506bc6"
                }
            }
        }
    },
